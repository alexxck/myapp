<div class="card">
<p id="notice"><%= notice %></p>

<h1 class="lead center">Posts</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th><i class="fas fa-pen-square"></i> Author</th>
      <th><i class="fab fa-tumblr"></i> Title</th>
      <th><i class="far fa-sticky-note"></i> Content</th>
      <th><i class="far fa-eye"></i> Views</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.author.full_name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.impressionist_count %></td>
        <td><%= link_to 'Show', post, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => "btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, :class => "btn btn-primary", :style => 'margin-bottom: 50px' %>

</div>
