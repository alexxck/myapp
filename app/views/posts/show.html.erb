<div class="card">

  <p class="text-dark" id="notice"><%= notice %></p>

  <p class="text-dark">
    <i class="fas fa-user"></i>
    <strong>Name:</strong>
    <%= @post.name %>
  </p>

  <p class="text-dark">
    <i class="fab fa-tumblr"></i>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p class="text-dark">
    <i class="far fa-sticky-note"></i>
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <div>

    <%= link_to(image_tag(@post.image.url, alt: 'Image'), @post.image.url, target: '_blank') if @post.image? %>
  </div>
<br>
  <p><i class="far fa-eye"></i> Views: <%= @post.impressionist_count %></p>
<br>
<h2><%= @post.comments.count %> Comments</h2>
  <%= render @post.comments %>
  <h3>Add a Comments:</h3>
  <%= render 'comments/form' %>
</div>
<br>
  <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-primary"%> |
  <%= link_to 'Back', posts_path, :class => "btn btn-primary" %>

