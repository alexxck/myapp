<div class="container">

  <p class="text-dark" id="notice"><%= notice %></p>

  <p class="text-dark">
    <strong>Name:</strong>
    <%= @post.name %>
  </p>

  <p class="text-dark">
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p class="text-dark">
    <strong>Content:</strong>
    <%= @post.content %>
  </p>

  <%= link_to 'Edit', edit_post_path(@post), :class => "btn btn-primary"%> |
  <%= link_to 'Back', posts_path, :class => "btn btn-primary" %>

</div>