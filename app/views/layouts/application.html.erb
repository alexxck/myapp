<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  <% if pop_up and current_user == nil %>
    <script> alert('You are not logged in. Please signup or login. ');</script>
  <% end %>

  <%= render 'layouts/navigation' %>

    <div class="container">
      <h1 class="badge badge-secondary">Hello, Rails blog!</h1>
      <div><%= form_tag(posts_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
        <%= submit_tag "Search" %>
      <% end %>
      </div>
      <%= yield %><!-- Content here -->
    </div>

  </body>
</html>
