<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-normal">AleXX_ck RoR blog</h5>
  <div style="margin-right: 200px; "><%= render 'layouts/search' %></div>
  <nav class="my-2">

    <%= link_to 'Home', posts_path, :class => "btn btn-outline-primary" %>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
      <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to 'Log Out', logout_path, :class => "btn btn-outline-primary" %>
    <% else %>
      <%= link_to 'Sign Up', signup_path,:class => "btn btn-outline-primary" %> or
      <%= link_to 'Log In', login_path,:class => "btn btn-outline-primary" %>
    <% end %>
  </nav>
</div>