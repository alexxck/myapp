<div class="card">
<p><i class="fas fa-user"></i> Name: <%= comment.name %></p>
<p><i class="far fa-comment"></i> Comment: <%= comment.body %></p>
<p><i class="far fa-clock"></i> Time ago: <%= distance_of_time_in_words(comment.created_at, Time.now, include_seconds: false) %></p>
<p><%= link_to 'Delete',[comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-danger' %></p>
</div>