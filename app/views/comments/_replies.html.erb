<%= form_with(model: [ @post, @post.comments.build ], local: true, remote: true) do |form| %>
<%= form.hidden_field :parent_id, value: params[:parent_id] %>
<p>
    <%= form.label :body %><br>
    <%= form.text_area :body, class:'form-control' %>
</p>
<p>
    <%= form.submit class:'btn btn-info btn-sm' %>
</p>
<% end %>