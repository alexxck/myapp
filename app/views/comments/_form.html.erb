<div class="container">
  <%= form_for ([@post, @post.comments.build]), remote: true do |f| %>
    <% if session[:author_id] != current_user %>
      <%= f.hidden_field :parent_id %>
      <p>
        <%= f.label :body %><br>
        <%= f.text_area :body, class:'form-control'%>
      </p>
      <br>
      <p>
        <%= f.submit({:class => 'btn btn-success'}) %>
      </p>
    <% end %>
  <% end %>
</div>